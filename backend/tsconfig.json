{
  "compilerOptions": {

    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",


    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "../types/**/*"],
  "exclude": ["node_modules", "dist"]
}
