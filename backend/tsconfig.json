{
  "compilerOptions": {

    "module": "CommonJS",
    "target": "ES2022",

    // pick ONE of the two module resolution options below (see section 2)
    "moduleResolution": "Node",
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@types": ["../types/index"],
      "@types/*": ["../types/*"]
    },

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "../types/**/*"],
  "exclude": ["node_modules", "dist"]
}
